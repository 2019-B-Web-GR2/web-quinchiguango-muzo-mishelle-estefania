<%- include('../../compartido/cabecera')%>

<% const estaEditando= usuario!=undefined%> <!--para para mostrar un contenido o otro -->

<div class="container">
    <% if(datos.error){ %>
        <div class="alert alert-danger" role="alert">
            <%= datos.error %>
        </div>
    <% } %>

    <!-- CONDICION ? TRUE : FALSE -->
    <h1><%= estaEditando ? 'Editando ' + datos.usuario.nombre : 'Crear Usuario' %></h1>

    <form action="/usuario<%= estaEditando ? '/' + datos.usuario.id : '' %>"
          method="POST"
    >
        <div class="form-group">
            <label for="nombreID">Nombre</label>
            <input id="nombreID"
                   type="text"
                   name="nombre"
                   value="<%= estaEditando ? datos.usuario.nombre : '' %>"
                   placeholder="Ej: Mishelle Quinchiguango "
                   title="Ingresar nombre de usuario"
                   class="form-control">
            <small id="nombreIDHelp"
                   class="form-text text-muted">
                Ingresa un nombre mayor a 3 caracteres y menor a 10.
            </small>
        </div>
        <div class="form-group">
            <label for="cedulaID">Cedula</label>
            <input id="cedulaID"
                   type="text"
                   name="cedula"
                   value="<%= estaEditando ? datos.usuario.cedula : '' %>"
                    <%= estaEditando ? 'disabled' : '' %>
                   placeholder="Ej: 1723902472"
                   title="Ingresar la cedula del usuario"
                   class="form-control">
            <small id="cedulaIDHelp"
                   class="form-text text-muted">
                Ingresar una cedula v√°lida.
            </small>
        </div>
        <button type="submit"
                class="btn btn-success"
        >
            Crear Usuario
        </button>
        <button type="reset"
                class="btn btn-secondary"
        >
            Limpiar formulario
        </button>
    </form>

</div>
<%- include('../../compartido/pie-de-pagina') %>
